<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DataPilot</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light" data-bs-theme="light">
    @await Html.PartialAsync("_Navbar")
    <div class="container mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4 py-3">
        <div class="container">
            <span>&copy; @DateTime.UtcNow.Year - DataPilot</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>window.require={};</script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/monaco-editor/0.50.0/min/vs/loader.min.js"></script>
    <script>
        (function() {
            const key = 'dp-theme';
            const current = localStorage.getItem(key) || 'light';
            document.body.setAttribute('data-bs-theme', current);
            window.toggleTheme = function() {
                const next = document.body.getAttribute('data-bs-theme') === 'dark' ? 'light' : 'dark';
                document.body.setAttribute('data-bs-theme', next);
                localStorage.setItem(key, next);
            };
        })();
    </script>
    @await Html.PartialAsync("_Toast")
    @RenderSection("Scripts", required: false)
</body>
</html>
