<div class="position-fixed top-0 end-0 p-3" style="z-index: 1080">
    <div id="dpToast" class="toast align-items-center text-bg-primary border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body" id="dpToastBody">Ready.</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>
<script>
    window.showToast = function (text) {
        const el = document.getElementById('dpToast');
        document.getElementById('dpToastBody').innerText = text;
        const toast = new bootstrap.Toast(el);
        toast.show();
    }
</script>
