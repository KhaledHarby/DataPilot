@model DataPilot.Web.Models.TableSelectionViewModel
@{
    ViewData["Title"] = "Select Tables & Views";
}
<div class="container py-3">
    <h2>Select Tables & Views</h2>
    <form method="post">
        <input type="hidden" asp-for="ConnectionId" />
        <div class="mb-2">
            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="setAll(true)">Select All</button>
            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="setAll(false)">Clear All</button>
        </div>
        <div class="list-group" style="max-height: 50vh; overflow:auto;">
            @for (var i = 0; i < Model.Items.Count; i++)
            {
                <label class="list-group-item d-flex align-items-center">
                    <input class="form-check-input me-2" type="checkbox" asp-for="Items[i].Selected" />
                    <input type="hidden" asp-for="Items[i].Name" />
                    <span>@Model.Items[i].Name</span>
                </label>
            }
        </div>
        <div class="mt-3">
            <button class="btn btn-primary" type="submit">Save Selection</button>
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>
<script>
    function setAll(val){
        document.querySelectorAll('input[type=checkbox]').forEach(cb=> cb.checked = val);
    }
</script>


