@{
    ViewData["Title"] = "MCP Dashboard";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-network-wired me-2"></i>
                        Model Context Protocol (MCP) Dashboard
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Server Info -->
                        <div class="col-md-6">
                            <div class="card border-primary">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-server me-2"></i>
                                        MCP Server Information
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div id="serverInfo">
                                        <div class="text-center">
                                            <div class="spinner-border text-primary" role="status">
                                                <span class="visually-hidden">Loading...</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- External Connection -->
                        <div class="col-md-6">
                            <div class="card border-success">
                                <div class="card-header bg-success text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-plug me-2"></i>
                                        Connect to External MCP Server
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <form id="externalConnectionForm">
                                        <div class="mb-3">
                                            <label for="serverUrl" class="form-label">Server URL</label>
                                            <input type="url" class="form-control" id="serverUrl" 
                                                   placeholder="http://localhost:3000" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="clientName" class="form-label">Client Name</label>
                                            <input type="text" class="form-control" id="clientName" 
                                                   value="DataPilot" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="clientVersion" class="form-label">Client Version</label>
                                            <input type="text" class="form-control" id="clientVersion" 
                                                   value="1.0.0" required>
                                        </div>
                                        <button type="submit" class="btn btn-success">
                                            <i class="fas fa-link me-2"></i>
                                            Connect
                                        </button>
                                    </form>
                                    <div id="externalConnectionResult" class="mt-3"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <!-- Resources -->
                        <div class="col-md-6">
                            <div class="card border-info">
                                <div class="card-header bg-info text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-database me-2"></i>
                                        Available Resources
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div id="resourcesList">
                                        <div class="text-center">
                                            <div class="spinner-border text-info" role="status">
                                                <span class="visually-hidden">Loading...</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Tools -->
                        <div class="col-md-6">
                            <div class="card border-warning">
                                <div class="card-header bg-warning text-dark">
                                    <h5 class="mb-0">
                                        <i class="fas fa-tools me-2"></i>
                                        Available Tools
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div id="toolsList">
                                        <div class="text-center">
                                            <div class="spinner-border text-warning" role="status">
                                                <span class="visually-hidden">Loading...</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <!-- Tool Execution -->
                        <div class="col-12">
                            <div class="card border-secondary">
                                <div class="card-header bg-secondary text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-play me-2"></i>
                                        Execute MCP Tool
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <form id="toolExecutionForm">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <label for="toolName" class="form-label">Tool Name</label>
                                                <select class="form-select" id="toolName" required>
                                                    <option value="">Select a tool...</option>
                                                </select>
                                            </div>
                                            <div class="col-md-8">
                                                <label for="toolArguments" class="form-label">Arguments (JSON)</label>
                                                <textarea class="form-control" id="toolArguments" rows="3" 
                                                          placeholder='{"connectionId": "your-connection-id", "sql": "SELECT * FROM table"}'></textarea>
                                            </div>
                                        </div>
                                        <div class="mt-3">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-play me-2"></i>
                                                Execute Tool
                                            </button>
                                        </div>
                                    </form>
                                    <div id="toolExecutionResult" class="mt-3"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Resource Viewer Modal -->
<div class="modal fade" id="resourceModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Resource Content</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <pre id="resourceContent" class="bg-light p-3 rounded"></pre>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            loadServerInfo();
            loadResources();
            loadTools();

            // External connection form
            $('#externalConnectionForm').on('submit', function(e) {
                e.preventDefault();
                connectToExternalServer();
            });

            // Tool execution form
            $('#toolExecutionForm').on('submit', function(e) {
                e.preventDefault();
                executeTool();
            });
        });

        function loadServerInfo() {
            $.get('/mcp/info')
                .done(function(data) {
                    $('#serverInfo').html(`
                        <div class="row">
                            <div class="col-6">
                                <strong>Name:</strong> ${data.name}<br>
                                <strong>Version:</strong> ${data.version}<br>
                                <strong>Protocol:</strong> ${data.protocol_version}
                            </div>
                            <div class="col-6">
                                <strong>Description:</strong> ${data.description}<br>
                                <strong>Resources:</strong> ${data.capabilities.resources.length}<br>
                                <strong>Tools:</strong> ${data.capabilities.tools.length}
                            </div>
                        </div>
                    `);
                })
                .fail(function(xhr) {
                    $('#serverInfo').html('<div class="alert alert-danger">Failed to load server info</div>');
                });
        }

        function loadResources() {
            $.post('/mcp/list_resources')
                .done(function(data) {
                    let html = '<div class="list-group">';
                    data.resources.forEach(function(resource) {
                        html += `
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">${resource.name}</h6>
                                    <small class="text-muted">${resource.description}</small><br>
                                    <code>${resource.uri}</code>
                                </div>
                                <button class="btn btn-sm btn-outline-info" onclick="readResource('${resource.uri}')">
                                    <i class="fas fa-eye"></i> View
                                </button>
                            </div>
                        `;
                    });
                    html += '</div>';
                    $('#resourcesList').html(html);
                })
                .fail(function(xhr) {
                    $('#resourcesList').html('<div class="alert alert-danger">Failed to load resources</div>');
                });
        }

        function loadTools() {
            $.post('/mcp/list_tools')
                .done(function(data) {
                    let html = '<div class="list-group">';
                    data.tools.forEach(function(tool) {
                        html += `
                            <div class="list-group-item">
                                <h6 class="mb-1">${tool.name}</h6>
                                <p class="mb-1">${tool.description}</p>
                                <small class="text-muted">Schema: ${JSON.stringify(tool.input_schema)}</small>
                            </div>
                        `;
                    });
                    html += '</div>';
                    $('#toolsList').html(html);

                    // Populate tool selector
                    let options = '<option value="">Select a tool...</option>';
                    data.tools.forEach(function(tool) {
                        options += `<option value="${tool.name}">${tool.name}</option>`;
                    });
                    $('#toolName').html(options);
                })
                .fail(function(xhr) {
                    $('#toolsList').html('<div class="alert alert-danger">Failed to load tools</div>');
                });
        }

        function readResource(uri) {
            $.post('/mcp/read_resource', { 
                uri: uri 
            })
            .done(function(data) {
                $('#resourceContent').text(JSON.stringify(data.contents, null, 2));
                $('#resourceModal').modal('show');
            })
            .fail(function(xhr) {
                alert('Failed to read resource: ' + xhr.responseText);
            });
        }

        function connectToExternalServer() {
            const data = {
                serverUrl: $('#serverUrl').val(),
                clientName: $('#clientName').val(),
                clientVersion: $('#clientVersion').val()
            };

            $.post('/mcp/connect', data)
                .done(function(response) {
                    if (response.success) {
                        $('#externalConnectionResult').html(`
                            <div class="alert alert-success">
                                <strong>Connected successfully!</strong><br>
                                Server: ${response.serverInfo.name} v${response.serverInfo.version}<br>
                                Description: ${response.serverInfo.description}
                            </div>
                        `);
                    } else {
                        $('#externalConnectionResult').html(`
                            <div class="alert alert-danger">
                                <strong>Connection failed:</strong> ${response.error}
                            </div>
                        `);
                    }
                })
                .fail(function(xhr) {
                    $('#externalConnectionResult').html(`
                        <div class="alert alert-danger">
                            <strong>Connection failed:</strong> ${xhr.responseText}
                        </div>
                    `);
                });
        }

        function executeTool() {
            const toolName = $('#toolName').val();
            const argumentsText = $('#toolArguments').val();

            if (!toolName) {
                alert('Please select a tool');
                return;
            }

            let arguments;
            try {
                arguments = argumentsText ? JSON.parse(argumentsText) : {};
            } catch (e) {
                alert('Invalid JSON in arguments');
                return;
            }

            const data = {
                name: toolName,
                arguments: arguments
            };

            $('#toolExecutionResult').html(`
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Executing...</span>
                    </div>
                </div>
            `);

                        $.post('/mcp/call_tool', data)
                .done(function(response) {
                    if (response.is_error) {
                        $('#toolExecutionResult').html(`
                            <div class="alert alert-danger">
                                <strong>Tool execution failed:</strong> ${response.error}
                            </div>
                        `);
                    } else {
                        $('#toolExecutionResult').html(`
                            <div class="alert alert-success">
                                <strong>Tool executed successfully!</strong>
                                <pre class="mt-2">${JSON.stringify(response.result, null, 2)}</pre>
                            </div>
                        `);
                    }
                })
                .fail(function(xhr) {
                    $('#toolExecutionResult').html(`
                        <div class="alert alert-danger">
                            <strong>Tool execution failed:</strong> ${xhr.responseText}
                    </div>
                    `);
                });
        }
    </script>
}
